<Window x:Class="ReadResult.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IControl助手" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListBox Height="48" Grid.Row="1" HorizontalAlignment="Stretch" Name="lstboxUsers" VerticalAlignment="Top">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="LightGreen" />
                    <Setter Property="Margin"      Value="5, 0,5,0" />
                </Style>
            </ListBox.Resources>
            
        </ListBox>
        <Grid Name="myCanvas" Grid.Row="1" Margin="0,0,0,20">

        </Grid>
        <Label FontFamily="SimHei" Content="微孔板名：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
