<Window x:Class="ReadResult.CheckRemoteFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CheckRemoteFolder" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Content="确认" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Height="40" Width="64" x:Name="btnConfirm" IsDefault="True" Click="btnConfirm_Click" Grid.Column="1"/>
        <Label Content="提示:" Grid.Column="1" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox IsReadOnly="True" Grid.Column="1" Name="txtHint" HorizontalAlignment="Stretch" Margin="11,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch"/>
        <Label Content="所有板子:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ListBox Name="lstPlates" HorizontalAlignment="Stretch" Margin="19,41,0,0" VerticalAlignment="Stretch" />

    </Grid>
</Window>
